<%= form_for(resource, as: resource_name, url: session_path(resource_name),
    html: { data: { turbo: false }, class: 'mt-8 p-5 bg-white border-y border-gray-500'}) do |f|
  %>

  <div class="field border-b border-gray-500">
    <%= f.email_field :email,
      autofocus: true,
      autocomplete: "email",
      placeholder: "Email",
      class: "w-full px-0 border-none"
    %>
  </div>

  <div class="field border-b border-gray-500">
    <%= f.password_field :password,
      autocomplete: "current-password",
      placeholder: "Password",
      class: "w-full px-0 border-none"
    %>
  </div>

  <% if devise_mapping.rememberable? %>
    <div class="field mt-5 flex items-center gap-2">
      <%= f.check_box :remember_me %>
      <%= f.label :remember_me, class: "text-black" %>
    </div>
  <% end %>

  <div class="actions mt-5 flex">
    <%= f.submit "Log In", class: "p-3 text-center text-white bg-main w-full" %>
  </div>
<% end %>