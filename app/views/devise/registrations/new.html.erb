<%= form_for(resource, as: resource_name, url: registration_path(resource_name),
    html: { data: { turbo: false }, class: 'mt-8 p-5 bg-white border-y border-gray-500'
    }) do |f|
  %>
  <%= render "devise/shared/error_messages", resource: resource %>

  <div class="field border-b border-gray-500">
    <%= f.text_field :name,
      autofocus: true,
      autocomplete: "name",
      placeholder: "Name",
      class: "w-full px-0 border-none"
    %>
  </div>

  <div class="field border-b border-gray-500">
    <%= f.email_field :email,
      autofocus: true,
      autocomplete: "email",
      placeholder: "Email",
      class: "w-full px-0 border-none"
    %>
  </div>

  <div class="field border-b border-gray-500">
    <%= f.password_field :password,
      autocomplete: "new-password",
      placeholder: "Password",
      class: "w-full px-0 border-none"
    %>
  </div>

  <div class="field border-b border-gray-500">
    <%= f.password_field :password_confirmation,
      autocomplete: "new-password",
      placeholder: "Confirm Password",
      class: "w-full px-0 border-none"
    %>
  </div>

  <div class="actions mt-5 flex">
    <%= f.submit "Sign Up", class: "p-3 text-center text-white bg-main w-full" %>
  </div>
<% end %>